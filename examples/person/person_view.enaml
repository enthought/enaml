from enaml.stdlib.fields import IntField


PersonForm(Form):
    attr person
    Label:
        text = 'First Name'
    Field:
        value := person.first_name
    Label:
        text = 'Last Name'
    Field:
        value := person.last_name
    Label:
        text = 'Age'
    IntField:
        low = 0
        value := person.age


defn PersonView(person):
    Window:
        PersonForm:
            person = person
            
